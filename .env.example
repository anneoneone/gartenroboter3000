# Gartenroboter3000 Configuration
# Copy this file to .env and fill in your values

# ============================================================
# TELEGRAM CONFIGURATION (Required)
# ============================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID (use @userinfobot to find it)
# Comma-separated list for multiple users
TELEGRAM_ALLOWED_CHAT_IDS=123456789

# Admin chat IDs (can manage whitelist)
TELEGRAM_ADMIN_CHAT_IDS=123456789

# ============================================================
# WEATHER API CONFIGURATION (Required)
# ============================================================
# Get your API key from https://openweathermap.org/api
OPENWEATHER_API_KEY=your_api_key_here

# Your location coordinates (for sunset calculation)
LOCATION_LATITUDE=52.5200
LOCATION_LONGITUDE=13.4050
LOCATION_TIMEZONE=Europe/Berlin

# ============================================================
# SENSOR THRESHOLDS (Optional - defaults shown)
# ============================================================
# Soil moisture threshold (0-100%, below = dry)
SENSOR_SOIL_THRESHOLD_DRY=30

# Water level minimum (0-100%, below = warning)
SENSOR_WATER_LEVEL_MIN=15

# Pi temperature warning threshold (Celsius)
SENSOR_PI_TEMP_WARNING=70

# ============================================================
# PUMP CONFIGURATION (Optional - defaults shown)
# ============================================================
# Maximum pump runtime per cycle (seconds, 10-300)
PUMP_MAX_RUNTIME=180

# Cooldown between pump cycles (seconds, 60-600)
PUMP_COOLDOWN=300

# ============================================================
# GPIO PIN CONFIGURATION (Optional - defaults shown)
# ============================================================
# MCP3008 ADC chip select pin
GPIO_ADC_CS_PIN=8

# Soil moisture sensor channels on MCP3008 (0-7)
GPIO_SOIL_SENSOR_CHANNELS=0,1,2,3

# Water level sensor channel on MCP3008
GPIO_WATER_LEVEL_CHANNEL=4

# Pump relay control pin
GPIO_PUMP_RELAY_PIN=17

# HC-SR04 ultrasonic sensor pins (alternative to analog)
GPIO_ULTRASONIC_TRIGGER_PIN=23
GPIO_ULTRASONIC_ECHO_PIN=24

# ============================================================
# DATABASE CONFIGURATION (Optional - defaults shown)
# ============================================================
# Database file path
DATABASE_PATH=data/gartenroboter.db

# Data retention period (days)
DATABASE_RETENTION_DAYS=90

# ============================================================
# SCHEDULER CONFIGURATION (Optional - defaults shown)
# ============================================================
# Sensor polling interval (seconds)
SCHEDULER_SENSOR_INTERVAL=30

# Watering check interval (seconds)
SCHEDULER_WATERING_INTERVAL=300

# ============================================================
# DEVELOPMENT MODE
# ============================================================
# Set to true to use mock GPIO/sensors (for development)
MOCK_MODE=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
